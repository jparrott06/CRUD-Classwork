<div class="form-data">
    <form action="/courses/create" method="POST">

        <label for="txtTitle">Title</label>
        <input type="text" name="title" id="txtTitle" autofocus required>

        <label for="txtDescription">Description</label>
        <input type="text" name="description" id="txtDescription" required>

        <label for="numMaxStudents">Maximum number of students</label>
        <input type="number" name="maxStudents" id="numMaxStudents" required>

        <label for="numCost">Cost</label>
        <input type="number" name="cost" id="numCost" required>

        <br>
        <button class="button" type="submit">Create</button>

    </form>
</div>